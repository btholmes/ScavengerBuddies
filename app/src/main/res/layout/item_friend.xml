<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="@dimen/spacing_small"
    >

    <LinearLayout
        android:id="@+id/userContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/spacing_large"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/ic_generic_account"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/spacing_medium"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/emailInfo"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/emailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="friendName"
                    android:textSize="15sp"
                    />


            </LinearLayout>



            <LinearLayout
                android:visibility="visible"
                android:id="@+id/facebookInfo"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="friendName"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="friendName"
                    android:textSize="10sp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/challengeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_play_arrow"
            android:padding="@dimen/spacing_medium"
            android:backgroundTint="@color/colorAccent"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/messageButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_message"
            android:backgroundTint="@color/colorAccent"
            android:padding="@dimen/spacing_medium"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_large"
            />

    </LinearLayout>


</RelativeLayout>