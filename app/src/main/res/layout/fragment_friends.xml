<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/searchHolder"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small"
        >

        <LinearLayout
            android:padding="@dimen/spacing_medium"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/black"
                android:src="@drawable/ic_menu_search"
                />

            <EditText
                android:id="@+id/findUsersTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Find users"
                android:background="@null"
                android:layout_marginTop="2dp"
                />

            <ImageView
                android:id="@+id/closeTextView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_call"
                android:tint="@color/black"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>

        <view
            android:id="@+id/underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:background_color="@color/black"
            ></view>

    </LinearLayout>


    <TextView
        android:id="@+id/friendsText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Friends fragment"
        android:gravity="center"
        />



    <TextView
        android:id="@+id/inviteFriends"
        android:text="Connect with facebook to challenge your friends"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/facebookButton"
        android:layout_margin="@dimen/spacing_large"
        />

    <ben.holmes.scavenger.buddies.Model.ShadowButton
        android:id="@+id/facebookButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_medium"
        app:text="Connect"
        app:background_color="@color/com_facebook_blue"
        app:left_icon="@drawable/ic_feed_dark"
        >
    </ben.holmes.scavenger.buddies.Model.ShadowButton>

</RelativeLayout>