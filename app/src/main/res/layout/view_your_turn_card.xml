<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/your_turn_card"
    android:layout_below="@id/game_button"
    android:visibility="visible"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/grey_bg"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/your_turn_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorAccent"
                android:padding="@dimen/spacing_small"
                >

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Your Turn"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/your_turn_recycler_holder"
                android:layout_below="@+id/your_turn_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/your_turn_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    >
                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>
        </RelativeLayout>
</android.support.v7.widget.CardView>