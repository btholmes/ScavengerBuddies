<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <View
        android:id="@+id/check_mark"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/check_mark"
        android:backgroundTint="@color/OrangeRed"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/main_content"
        android:layout_marginBottom="-19dp"
        android:visibility="gone"
        ></View>

    <!--<FrameLayout-->
        <!--android:id="@+id/top_frame"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginTop="50dp"-->
        <!--&gt;-->

        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_centerInParent="true"
            >

            <FrameLayout
                android:id="@+id/shadow"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:background="@drawable/game_button_shadow">


            </FrameLayout>

            <RelativeLayout
                android:id="@+id/button_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_clicked_height"
                android:layout_gravity="top"
                android:background="@drawable/game_button_border"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large">


                <ImageView
                    android:id="@+id/leftIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_menu_new_friend"
                    android:tint="@color/black" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Friend"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


                <ImageView
                    android:id="@+id/rightIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_menu_new_friend"
                    android:tint="@color/black" />


            </RelativeLayout>


        </FrameLayout>





    <!--</FrameLayout>-->


</RelativeLayout>